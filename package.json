{
  "name": "tigado-backend",
  "version": "2.0.0",
  "description": "Tigado Inc. api microservice.",
  "author": "Tigado Inc. <tigado.dev@gmail.com> (https://www.tigado.ca)",
  "main": "dist/index.js",
  "private": true,
  "license": "MIT",
  "keywords": [
    "Tigado",
    "CRM",
    "ERP",
    "Backend"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tigado/tigado-api.git"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "npm run build && node --inspect dist/index.js",
    "start:dev": "nodemon",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./lib/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'lib/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'lib/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"lib/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'lib/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'lib/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "setup": "NODE_ENV=init node ./scripts/setup.js",
    "reset": "NODE_ENV=init node --inspect=0.0.0.0:7000 -r ts-node/register ./scripts/reset.js",
    "typecheck": "tsc --noEmit",
    "vercel-build": "echo building"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-safe": "^9.1.0",
    "fs": "^0.0.1-security",
    "helmet": "^7.1.0",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-compress": "^5.1.1",
    "koa-helmet": "^7.0.2",
    "koa-logger": "^3.2.1",
    "koa-morgan": "^1.0.1",
    "koa-router": "^13.0.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "pg": "^8.13.0",
    "playwright": "^1.48.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.13",
    "@types/json5": "^2.2.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-morgan": "^1.0.8",
    "@types/koa-router": "^7.4.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.5",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "_moduleAliases": {
    "@/models": "dist/models",
    "@/config": "dist/config",
    "@/helpers": "dist/helpers",
    "@/services": "dist/services",
    "@/constants": "dist/constants",
    "@/controllers": "dist/controllers",
    "@/middlewares": "dist/middlewares"
  }
}
