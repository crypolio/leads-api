{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"lib": ["es2021", "dom"],
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "lib",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"types": ["node", "@types/jest"],
		"skipLibCheck": true,
		"typeRoots" : ["./node_modules/@types"]
	},
	"include": [
		"lib/**/*"
	],
	"exclude" : [
		"lib/**/*.spec.ts"
	]
}
