{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "baseUrl": "./lib",
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/config": ["config"],
      "@/config/*": ["config/*"],

      "@/helpers": ["helpers"],
      "@/helpers/*": ["helpers/*"],

      "@/services": ["services"],
      "@/services/*": ["services/*"],

      "@/middlewares": ["./middlewares"],
      "@/middlewares/*": ["./middlewares/*"],

      "@/models/*": ["models/*"],
      "@/constants/*": ["constants/*"],
      "@/controllers/*": ["controllers/*"]
    }
  },
  "include": ["lib/**/*"],
  "exclude": ["lib/**/*.spec.ts"]
}
